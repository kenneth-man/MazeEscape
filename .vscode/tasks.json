// Predefined variables docs - https://code.visualstudio.com/docs/editor/variables-reference
{
	"version": "2.0.0",
	"tasks": [
		{
			"type": "cppbuild",
			"label": "C/C++: g++.exe build active file",
			"command": "C:/mingw64/bin/g++.exe",
			"args": [
				"-fdiagnostics-color=always",
				"-g",
				"-Wall",
				"-std=c++17",
				"${fileDirname}/*.cpp",
				"${fileDirname}/Actions/*.cpp",
				"${fileDirname}/Grid/*.cpp",
				"${fileDirname}/helpers/functions/*.cpp",
				"${fileDirname}/Player/*.cpp",
				"${fileDirname}/TitleScreen/*.cpp",
				"-o",
				"${fileDirname}/${fileBasenameNoExtension}.exe"
			],
			"options": {
				"cwd": "C:/mingw64/bin"
			},
			"problemMatcher": [
				"$gcc"
			],
			"group": {
				"kind": "build",
				"isDefault": true
			},
			"detail": "compiler: C:/mingw64/bin/g++.exe"
		}
	]
}